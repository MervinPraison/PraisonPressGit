; PraisonPressGit Export Configuration
; This file defines how different post types should be exported to markdown files

; ============================================================================
; GENERAL SETTINGS
; ============================================================================
[general]
; Base export directory (relative to WordPress root)
export_base_dir = "content"

; Default date format for filenames (if using date prefix)
date_format = "Y-m-d"

; Include date prefix in filenames by default
default_date_prefix = false

; ============================================================================
; POST TYPE: LYRICS
; ============================================================================
[lyrics]
; Export directory
directory = "lyrics"

; Directory structure: flat, alphabetical, hierarchical, custom
structure = "alphabetical"

; For alphabetical structure: organize by first letter of title
alphabetical_field = "title"
alphabetical_depth = 1  ; a/, b/, c/ (1 level)

; Filename pattern
; Available variables: {slug}, {title}, {date}, {id}
filename_pattern = "{slug}.md"

; Include date prefix in filename
date_prefix = false

; Custom fields to include in front matter
custom_fields[] = "artist"
custom_fields[] = "album"
custom_fields[] = "year"

; ============================================================================
; POST TYPE: BIBLE
; ============================================================================
[bible]
; Export directory
directory = "bible"

; Directory structure: hierarchical based on custom fields
structure = "hierarchical"

; Hierarchical structure definition
; Each level is a custom field name
hierarchy_levels[] = "book"      ; e.g., genesis, exodus
hierarchy_levels[] = "chapter"   ; e.g., 1, 2, 3
hierarchy_levels[] = "verse"     ; e.g., 1, 2, 3

; Filename pattern for leaf nodes
; For hierarchical: filename is the last level value
filename_pattern = "{verse}.md"

; Include date prefix in filename
date_prefix = false

; Custom fields to include in front matter
custom_fields[] = "book"
custom_fields[] = "chapter"
custom_fields[] = "verse"
custom_fields[] = "translation"
custom_fields[] = "testament"

; ============================================================================
; POST TYPE: CHORDS
; ============================================================================
[chords]
; Export directory
directory = "chords"

; Directory structure
structure = "alphabetical"

; Organize by first letter of song title
alphabetical_field = "title"
alphabetical_depth = 1

; Filename pattern
filename_pattern = "{slug}.md"

; Include date prefix
date_prefix = false

; Custom fields to include
custom_fields[] = "key"
custom_fields[] = "capo"
custom_fields[] = "artist"
custom_fields[] = "difficulty"

; ============================================================================
; POST TYPE: ARTICLES
; ============================================================================
[articles]
; Export directory
directory = "articles"

; Directory structure: flat or by category
structure = "category"

; For category structure: organize by primary category
category_depth = 1  ; category/ (1 level)

; Filename pattern
filename_pattern = "{date}-{slug}.md"

; Include date prefix
date_prefix = true

; Custom fields to include
custom_fields[] = "author_bio"
custom_fields[] = "reading_time"
custom_fields[] = "featured"

; ============================================================================
; POST TYPE: POSTS (Default WordPress Posts)
; ============================================================================
[post]
; Export directory
directory = "posts"

; Directory structure
structure = "date"

; For date structure: organize by year/month
date_depth = 2  ; year/month/ (2 levels)

; Filename pattern
filename_pattern = "{date}-{slug}.md"

; Include date prefix
date_prefix = true

; Custom fields to include
custom_fields[] = "subtitle"
custom_fields[] = "featured_image_caption"

; ============================================================================
; POST TYPE: PAGES
; ============================================================================
[page]
; Export directory
directory = "pages"

; Directory structure: flat (no subdirectories)
structure = "flat"

; Filename pattern
filename_pattern = "{slug}.md"

; Include date prefix
date_prefix = false

; Custom fields to include
custom_fields[] = "template"
custom_fields[] = "sidebar"

; ============================================================================
; CUSTOM POST TYPE TEMPLATE
; ============================================================================
; Copy and modify this template for additional post types
;
; [your_post_type]
; directory = "your_directory"
; structure = "flat|alphabetical|hierarchical|category|date|custom"
; filename_pattern = "{slug}.md"
; date_prefix = false
; custom_fields[] = "field1"
; custom_fields[] = "field2"
;
; For hierarchical structure:
; hierarchy_levels[] = "level1_field"
; hierarchy_levels[] = "level2_field"
; hierarchy_levels[] = "level3_field"
;
; For alphabetical structure:
; alphabetical_field = "title"
; alphabetical_depth = 1
;
; For category structure:
; category_depth = 1
;
; For date structure:
; date_depth = 2  ; year/month
