; PraisonPressGit Site Configuration Example
; Copy this file to site-config.ini and customize as needed

; ============================================================================
; SITE INFORMATION
; ============================================================================
[site]
title = "My WordPress Site"
description = "A Git-powered WordPress site"
url = "https://example.com"

; ============================================================================
; CONTENT SETTINGS
; ============================================================================
[content]
; Enable/disable file-based posts
enabled = true

; Content directory (relative to WordPress root)
content_dir = "content"

; Post types to load from files
; Add your custom post types here
post_types[] = "post"
post_types[] = "page"
post_types[] = "lyrics"
post_types[] = "bible"
post_types[] = "chords"
post_types[] = "articles"

; ============================================================================
; GITHUB INTEGRATION (Optional)
; ============================================================================
; Configure GitHub repository for collaborative content management
; Leave empty to use local Git only (no remote sync or pull requests)

[github]
; GitHub repository URL (e.g., https://github.com/username/repo or git@github.com:username/repo.git)
repository_url = ""

; GitHub OAuth App credentials (create at https://github.com/settings/developers)
; Required for pull request creation and private repository access
client_id = ""
client_secret = ""

; Branch to sync with (usually 'main' or 'master')
main_branch = "main"

; Auto-sync: Automatically pull changes from remote repository
; Options: 'webhook' (recommended), 'polling', 'manual'
auto_sync = "manual"

; Polling interval in minutes (only used if auto_sync = 'polling')
polling_interval = 5

; ============================================================================
; CACHE SETTINGS
; ============================================================================
[cache]
; Enable caching for better performance
enabled = true

; Cache TTL in seconds (default: 3600 = 1 hour)
ttl = 3600

; Cache key prefix
prefix = "praison_"

; ============================================================================
; PERFORMANCE SETTINGS
; ============================================================================
[performance]
; Use build-time index for large directories (100,000+ files)
use_build_index = true

; Threshold for using build index (number of files)
; If a directory has more than this many files, use index
build_index_threshold = 1000

; Lazy load content (load on-demand vs. all at once)
lazy_load = true

; ============================================================================
; DEVELOPMENT SETTINGS
; ============================================================================
[development]
; Enable debug mode (logs to debug.log)
debug = false

; Show file paths in admin
show_file_paths = false

; Enable verbose logging
verbose_logging = false
